<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.regionDescription.RegionDescriptionActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/progress_bar" />

        <include layout="@layout/no_data" />

        <include layout="@layout/no_network" />

        <include layout="@layout/server_error" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpImages"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvSightDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/default_text_size" />
            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSizeInc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="A+"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/tvSizeDec"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_yellow"
                    android:gravity="center"
                    android:text="A-"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>